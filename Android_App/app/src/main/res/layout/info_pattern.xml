<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/normal_margin">
            <TextView
                android:id="@+id/patternName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Coffee Break"
                android:fontFamily="@font/poppins"
                android:textColor="@color/TitleColor"
                android:textSize="@dimen/normal_text_size"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/patternType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Leisure"
                android:fontFamily="@font/poppins"
                android:textColor="@color/darkOrange"
                android:textSize="15sp"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/editPattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group_2__1_"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/normal_margin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/amount_per_month"
            android:fontFamily="@font/poppins"
            android:textColor="@color/TextColor"
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/patternMonthAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="249.11€"
            android:fontFamily="@font/poppins"
            android:textColor="@color/darkOrange"
            android:textSize="@dimen/normal_text_size"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/average_amount"
            android:fontFamily="@font/poppins"
            android:textColor="@color/TextColor"
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/patternAverageAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="249.11€"
            android:fontFamily="@font/poppins"
            android:textColor="@color/darkOrange"
            android:textSize="@dimen/normal_text_size"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/patternsTransactionsRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"/>

</LinearLayout>