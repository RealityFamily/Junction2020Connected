<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/normal_padding"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/goalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/editGoalBtn"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            tools:text="Travel to Bali"
            android:textColor="@color/TitleColor"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:textSize="@dimen/normal_text_size"/>
        <ImageButton
            android:id="@+id/editGoalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_group_2__1_"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekBarGoalProcent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="@dimen/normal_padding"
        android:progressDrawable="@drawable/seekbar_background"
        android:thumb="@drawable/seekbar_thumb"
        android:splitTrack="false"
        android:layout_below="@id/textContainer"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goalPattenrsRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_below="@id/seekBarGoalProcent"
        android:layout_above="@id/shareGoal"/>

    <Button
        android:id="@+id/shareGoal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/share"
        android:textColor="@color/white"
        android:backgroundTint="@color/darkOrange"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"/>

</RelativeLayout>